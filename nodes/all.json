{
  "name": "madbid",
  "description": "Install basic stuff for all systems",
  "openssh": {
    "server": {
      "port": "22",
      "password_authentication": "no",
      "permit_root_login": "yes",
      "max_auth_tries": "3"
    }
  },
  "fail2ban": {
    "bantime": 86400,
    "maxretry": 2
  },
  "java": {
    "install_flavor": "oracle",
    "jdk_version": "7",
    "oracle": {
      "accept_oracle_download_terms": "true"
    }
  },
  "papertrail": {
    "port": 43295
  },
  "new_relic": {
    "license_key": "9b200db9c0917ef7a788ad65fd7662a236335a7c"
  },
  "mongodb": {
    "cluster_name": "mongodb_madbid",
    "bind_ip": "127.0.0.1",
    "port": 27017,
    "mms_agent": {
      "api_key": "c7d4668c382d74c3f633f99766d82607",
      "secret_key": "f1f32bd0c7648caad7aa2be12fefd049",
      "install_munin": true,
      "enable_munin": true
    }
  },
  "elasticsearch": {
    "cluster": { "name" : "elasticsearch-madbid" },
    "discovery": { "zen": { "ping": { "multicast": { "enabled": false }}}},
    "network": { "host": "127.0.0.1" },
    "http": { "host": "127.0.0.1" },
    "version" : "1.0.0.RC2",
    "plugins" : {
      "elasticsearch/marvel/latest": {},
      "mobz/elasticsearch-head": {},
      "lukas-vlcek/bigdesk": {}
    }
  },
  "rsyslog": {
    "repeated_msg_reduction": "off"
  },
  "run_list": [
    "recipe[user::data_bag]",
    "recipe[apt]",
    "recipe[rsyslog]",
    "recipe[java::oracle]",
    "recipe[git]",
    "recipe[fail2ban]",
    "recipe[papertrail-rsyslog]",
    "recipe[newrelic-sysmond]",
    "recipe[mongodb::10gen_repo]",
    "recipe[mongodb]",
    "recipe[mongodb::mms-agent]",
    "recipe[python]",
    "recipe[runit]",
    "recipe[elasticsearch]"
  ]
}